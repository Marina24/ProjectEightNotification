<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_custom_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/button_corner"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/button_corner">

    <ImageView
        android:id="@+id/img_download_notification"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_downloader" />

    <TextView
        android:id="@+id/txt_notif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_download_notification"
        android:layout_toRightOf="@id/img_download_notification"
        android:paddingLeft="@dimen/button_corner"
        android:text="@string/download" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_notif_title"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/img_download_notification"
        android:paddingLeft="@dimen/button_corner"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_up_date_file" />

    <TextView
        android:id="@+id/txt_update_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_bar"
        android:layout_toRightOf="@id/img_download_notification"
        android:paddingLeft="@dimen/button_corner" />

</RelativeLayout>